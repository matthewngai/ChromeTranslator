{
  "manifest_version": 2,

  "name": "Chrome Translator",
  "description": "Translator with text to speech.",
  "version": "1.0",
  //http://icons.iconarchive.com/icons/igh0zt/ios7-style-metro-ui/64/MetroUI-Google-Translate-icon.png
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "http://www.bing.com/"
  ]
}
