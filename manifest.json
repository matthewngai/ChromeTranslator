{
  "permissions": [
    "<all_urls>",
    "tts",
    "tabs"
    // "activeTab",
    // "http://www.bing.com/"
  ],
  "manifest_version": 2,
  "background": {
    "scripts": ["background.js", "js/jquery-3.1.1.js"]
  },
  "name": "Chrome Translator",
  "description": "Translator with text to speech.",
  "version": "1.0",
  //http://icons.iconarchive.com/icons/igh0zt/ios7-style-metro-ui/64/MetroUI-Google-Translate-icon.png
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Chrome Translation",
    "default_icon": "icon.png"
  },
  // "options_page": "options.html",
  "minimum_chrome_version": "14",
  "web_accessible_resources": [
      "images/*.png"
    ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["style.css"],
      "js": ["content_script.js", "js/jquery-3.1.1.js"]
    }
  ],

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "256": "icon.png"
  }

}
