{
  "manifest_version": 2,
  "background": {
    "persistent": false,
    "scripts": ["background.js"]
  },
  "name": "Chrome Translator",
  "description": "Translator with text to speech.",
  "version": "1.0",
  //http://icons.iconarchive.com/icons/igh0zt/ios7-style-metro-ui/64/MetroUI-Google-Translate-icon.png
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "minimum_chrome_version": "14",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "all_frames": true,
      "js": ["content_script.js"]
    }
  ],
  "permissions": [
    "tabs",
    "<all_urls>",
    "activeTab",
    "http://www.bing.com/"
  ]
}
